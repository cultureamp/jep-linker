<!DOCTYPE html>
<html>
  <head>
    <title>Linkly</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
      <div class="col col-lg-3">
        <h1>LINKLY</h1>
        <% if user_signed_in? %>
          <p>Currently logged in as: <%= current_user.email %>. <%= link_to "Log out", destroy_user_session_path, method: "delete" %></p>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
