<!DOCTYPE html>
<html>
  <head>
    <title>Linker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <% if user_signed_in? %>
    <%= render 'devise/menu/login_items' %>
    Hello, <%= current_user.email %>
  <% end %>
    <%= yield %>
  </body>
</html>
