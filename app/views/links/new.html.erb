<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <% @link.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
  <% end %>
  <%= f.label :long_url, 'Long URL' %>
  <%= f.text_field :long_url %>
  <%= f.label :short_url, 'Short URL' %>
  <%= f.text_field :short_url %>
  <%= f.submit %>
<% end %>
