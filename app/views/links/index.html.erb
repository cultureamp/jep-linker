<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @links %>
      <% @links.each do |user| %>
        <tr>
          <td><%= "Short_url : #{user.short_url}" %></td>
          <td><%= "Long_url : #{user.long_url}" %></td>
        </tr>
      <% end %>
    <% else %>
      Nothing to see here!
    <% end %>
  </tbody>
</table>
